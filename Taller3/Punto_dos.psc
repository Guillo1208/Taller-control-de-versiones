	definir c como caracter;
	
	n<-10;
	c<-" * ";
	l<-1;
	
	mientras l<=n Hacer
		i<-1;
		j<-1;
		Mientras i<=(n-l) Hacer
			Escribir Sin Saltar "   ";
			i<-i+1;
		FinMientras
	
	
		mientras j<=l Hacer
		Escribir Sin Saltar c;
		j<-j+1;
		FinMientras
		
		l<-l+1;
		Escribir "";
	FinMientras


